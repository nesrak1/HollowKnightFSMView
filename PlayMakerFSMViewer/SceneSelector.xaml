<Window x:Class="PlayMakerFSMViewer.SceneSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlayMakerFSMViewer"
        mc:Ignorable="d"
        Title="Scene Selector" Height="600" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="searchBox" Height="20" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="searchBox_TextChanged" />
        <ListBox x:Name="listBox" Margin="0,20" />
        <Button x:Name="selectButton" Content="Select" VerticalAlignment="Bottom" Click="selectButton_Click"/>
    </Grid>
</Window>
